extends inc/head.jade

block content
    div.wrapper
        include inc/header.jade

        section.content.home
            p.catch-phrase Jeu 100% gratuit, revivez les sensations épiques de la bataille navale !

            section.promotion
                div
                    img(src='images/test1.jpg')
                    p GIF animé montrant l'écran de jeu
                div
                    img(src='images/test2.jpg')
                    p GIF animé montrant les classements et statistiques

            h2 Jouer

            if username
                h3 Bonjour #{username}
            else
                form#signin(method='post' action='/signin')
                    p#signin-message.form-main-message #{message}
                    input#email(type='text', name='username', placeholder='Adresse e-mail', value='louis.fischer@free.fr' autofocus)
                    input#password(type='password', name='password', placeholder='Mot de passe', value='louis')
                    button#signin-submit.button-effect(type='submit') Connexion

                a.link-effect(href='/signup', title='Vers la page de création de compte') Pas de compte ?

            div.push

    include inc/footer.jade

    script(src='/javascripts/pages/index.js')