extends inc/head.jade

block title
    title Manage your account

block content
    div.wrapper
        include inc/header.jade

        section.content.manage-account
            h1 GÃ©rez votre compte

            h2 Modifiez votre email
            form
                input#email(type='text', name='email', placeholder='E-mail')
                p#email-message
                button#email-submit.button-effect(type='submit') Modifier

            h2 Modifiez votre pseudonyme
            form
                input#username(type='text', name='username', placeholder='Pseudonyme')
                p#username-message
                button#username-submit.button-effect(type='submit') Modifier

            h2 Modifiez votre mot de passe
            form
                input#old-password(type='password', name='old_password', placeholder='Mot de passe actuel')
                p#current-password-message
                input#password(type='password', name='password', placeholder='Nouveau mot de passe')
                p#new-password-message
                input#password-confirmation(type='password', name='password_confirmation', placeholder='Confirmez le nouveau mot de passe')
                p#new-password-confirmation-message
                button#password-submit.button-effect(type='submit') Modifier

            h2 Supprimez votre compte
            button#delete-user.delete-account.button-effect Supprimer

        div.push

    include inc/footer.jade

    script(src='/javascripts/pages/profile.js')