			span.open.fa.fa-list-ol.fa-2x(aria-hidden="true")
			span.close.fa.fa-times.fa-2x(aria-hidden="true")
		button#chat-toggle.toggle.chat-toggle
			span.open.fa.fa-comments.fa-2x(aria-hidden="true")
			span.close.fa.fa-times.fa-2x(aria-hidden="true")
			span#new-messages-count.new-messages-count(data-count="0")
